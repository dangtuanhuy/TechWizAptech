@model WorkGenerator.Models.Job

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Create MenuItem</h2>
<br />

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Salary" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Salary" class="form-control" />
            </div>
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Description" class="form-control" />
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Status" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Image" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="file" name="files" multiple class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="StatusEnable" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="StatusEnable" class="form-control" />
            </div>
            <span asp-validation-for="StatusEnable" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Experience" class="control-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="Experience" asp-items="Html.GetEnumSelectList<Job.ExperienceJob>()" class="form-control"></select>
            </div>

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Others" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Others" class="form-control" />
            </div>
            <span asp-validation-for="Others" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CategoryId" class="control-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>

        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>
    </div>
</form>
